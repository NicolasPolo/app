<?xml version="1.0" encoding="utf-8"?>
<resources>


    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="titulo">
        <item name="android:layout_marginLeft">@dimen/border_left_right</item>
        <item name="android:layout_marginRight">@dimen/border_left_right</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginTop">@dimen/top_border_title</item>
        <item name="android:textColor">#0F044C</item>
        <item name="android:textSize">24dp</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
        <item name="android:fontFamily">monospace</item>
    </style>

    <style name="usucon">
        <item name="android:layout_marginLeft">@dimen/border_left_right</item>
        <item name="android:layout_marginRight">@dimen/border_left_right</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">#0F044C</item>
        <item name="android:textSize">24dp</item>
        <item name="android:fontFamily">monospace</item>
    </style>

    <style name="texto">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/corners</item>
        <item name="layout_constraintLeft_toLeftOf">@id/wrap_content</item>
        <item name="layout_constraintRight_toRightOf">@id/wrap_content</item>
        <item name="layout_constraintTop_toBottomOf">@id/wrap_content</item>
        <item name="android:fontFamily">monospace</item>
    </style>

    <style name="boton">
        <item name="android:layout_marginLeft">@dimen/top_border_button</item>
        <item name="android:layout_marginRight">@dimen/top_border_button</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">310dp</item>
        <item name="android:layout_marginTop">404dp</item>
        <item name="android:textColor">#0F044C</item>
        <item name="android:textSize">@dimen/text_height</item>
        <item name="android:fontFamily">monospace</item>
    </style>

    <style name="formu">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
